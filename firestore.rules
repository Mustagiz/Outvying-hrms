rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin or HR
    function isAdmin() {
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isSignedIn() && 
        (user.role == 'admin' ||
         user.role == 'Admin' ||
         user.role == 'super_admin' ||
         user.role == 'hr');
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || request.auth.uid == userId;
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && (request.resource.data.employeeId == request.auth.uid || request.resource.data.uid == request.auth.uid));
      allow update: if isAdmin() || (isSignedIn() && (resource.data.employeeId == request.auth.uid || resource.data.uid == request.auth.uid));
      allow delete: if isAdmin();
    }
    
    // Leaves collection
    match /leaves/{leaveId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Rosters collection
    match /rosters/{rosterId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Documents collection
    match /documents/{documentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Bank Accounts collection
    match /bankAccounts/{accountId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Leave Types collection
    match /leaveTypes/{typeId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Regularization Requests collection
    match /regularizationRequests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin() || (isSignedIn() && resource.data.employeeId == request.auth.uid && resource.data.status == 'Pending');
      allow delete: if isAdmin() || (isSignedIn() && resource.data.employeeId == request.auth.uid && resource.data.status == 'Pending');
    }
    
    // Manual Leave Allocations collection
    match /manualLeaveAllocations/{allocationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Settings collection
    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Notifications collection - CRITICAL: Users must be able to update their own notifications
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- Payroll System Extensions ---
    
    // Payroll History (Bonuses, Increments, Adjustments)
    match /payrollHistory/{historyId} {
      allow read, write: if isAdmin();
    }
    
    // Payroll Loans & Advances
    match /payrollLoans/{loanId} {
      allow read, write: if isAdmin();
    }
    
    // Payroll Claims (Reimbursements)
    match /payrollClaims/{claimId} {
      allow read, write: if isAdmin();
      allow create: if isSignedIn(); // Allow employees to submit claims
    }

    // Attendance Rules
    match /attendanceRules/{ruleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Culture Hub
    match /cultureBadges/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /cultureKudos/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Allow reactions
      allow delete: if isAdmin();
    }
    match /cultureSettings/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /cultureMoods/{id} {
      allow read, create: if isSignedIn();
    }
  }
}
